[
  {
    "name": "imageHotspotQuestion",
    "type": "group",
    "widget": "wizard",
    "label": "Image Hotspot Question Editor",
    "fields": [
      {
        "name": "backgroundImageSettings",
        "type": "group",
        "label": "Background image",
        "fields": [
          {
            "name": "questionTitle",
            "type": "text",
            "label": "The title of this question",
            "default": "Image hotspot question",
            "description": "Used in summaries, statistics etc."
          },
          {
            "name": "backgroundImage",
            "type": "image",
            "label": "Background image",
            "description": "Select an image to use as background the image hotspot question."
          }
        ]
      },
      {
        "name": "hotspotSettings",
        "type": "group",
        "label": "Hotspots",
        "widget": "imageHotspotQuestion",
        "description": "Choose appropriate figure for your hotspot, configure it, then drag and resize it into place.",
        "fields": [
          {
            "name": "taskDescription",
            "type": "text",
            "label": "Task description",
            "description": "Instructions to the user.",
            "optional": true
          },
          {
            "name": "hotspot",
            "type": "list",
            "label": "Hotspot",
            "entity": "Hotspot",
            "field": {
              "type": "group",
              "label": "Hotspot",
              "fields": [
                {
                  "name": "userSettings",
                  "type": "group",
                  "label": "userSettings",
                  "fields": [
                    {
                      "name": "correct",
                      "type": "boolean",
                      "label": "Correct",
                      "description": "There can be multiple correct hotspots. However, the user gets correct/incorrect feedback immediately after first click."
                    },
                    {
                      "name": "feedbackText",
                      "type": "text",
                      "label": "Feedback",
                      "optional": true
                    }
                  ]
                },
                {
                  "name": "computedSettings",
                  "type": "group",
                  "label": "computedSettings",
                  "fields": [
                    {
                      "name": "x",
                      "type": "number",
                      "optional": true
                    },
                    {
                      "name": "y",
                      "type": "number",
                      "optional": true
                    },
                    {
                      "name": "width",
                      "type": "number",
                      "optional": true
                    },
                    {
                      "name": "height",
                      "type": "number",
                      "optional": true
                    },
                    {
                      "name": "figure",
                      "type": "text",
                      "optional": true
                    }
                  ]
                }
              ]
            }
          },
          {
            "name": "noneSelectedFeedback",
            "type": "text",
            "label": "Feedback if the user selects an empty spot:",
            "placeholder": "You didn't locate any hotspots, try again!",
            "optional": true
          }
        ]
      }
    ]
  },
  {
    "name": "feedbackModal",
    "type": "group",
    "label": "Modal style feedback",
    "description": "These options will let you control how the feedback is displayed.",
    "optional": true,
    "fields": [
      {
        "name": "modalEnabled",
        "type": "boolean",
        "label": "Display feedback as modal",
        "description": "Should the feedback be displayed as a modal?",
        "default": false
      },
      {
        "name": "feedbackModalRight",
        "type": "group",
        "label": "Right",
        "description": "right stuff",
        "optional": true,
        "fields": [
          {
            "name": "image",
            "type": "image",
            "label": "Right Image",
            "optional": true,
            "description": "An optional image to display if the question is right"
          },
          {
            "name": "response",
            "type": "text",
            "label": "Text to display if answer is right",
            "default": "Fantastic Job",
            "deprecated": true
          },
          {
            "name": "feedbackButtons",
            "type": "list",
            "label": "Buttons",
            "description": "Add Feedback Buttons",
            "entity": "option",
            "min": 1,
            "max": 3,
            "defaultNum": 1,
            "field": {
              "name": "button",
              "type": "group",
              "label": "Button",
              "fields": [
                {
                  "name": "text",
                  "type": "text",
                  "label": "Text"
                },
                {
                  "name": "resetQuestion",
                  "type": "boolean",
                  "label": "Reset Question",
                  "optional": true,
                  "default": false
                },
                {
                  "name": "link",
                  "type": "text",
                  "label": "Link",
                  "optional": true
                },
                {
                  "name": "slide",
                  "type": "number",
                  "description": "Will default to link unless left blank",
                  "optional": true,
                  "label": "Anchor To Slide Number"
                }
              ]
            }
          }
        ]
      },
      {
        "name": "feedbackModalWrong",
        "type": "group",
        "label": "Wrong",
        "description": "Wrong stuff",
        "optional": true,
        "fields": [
          {
            "name": "image",
            "type": "image",
            "label": "Wrong Image",
            "optional": true,
            "description": "An optional image to display if the question is wrong"
          },
          {
            "name": "response",
            "type": "text",
            "label": "Text to display if answer is wrong",
            "default": "Not Quite!",
            "deprecated": true
          },
          {
            "name": "feedbackButtons",
            "type": "list",
            "label": "Buttons",
            "description": "Add Feedback Buttons",
            "entity": "option",
            "min": 1,
            "max": 3,
            "defaultNum": 1,
            "field": {
              "name": "button",
              "type": "group",
              "label": "Button",
              "fields": [
                {
                  "name": "text",
                  "type": "text",
                  "label": "Text"
                },
                {
                  "name": "resetQuestion",
                  "type": "boolean",
                  "label": "Reset Question",
                  "optional": true,
                  "default": false
                },
                {
                  "name": "link",
                  "type": "text",
                  "label": "Link",
                  "optional": true
                },
                {
                  "name": "slide",
                  "type": "number",
                  "description": "Will default to link unless left blank",
                  "optional": true,
                  "label": "Anchor To Slide Number"
                }
              ]
            }
          }
        ]
      }
    ]
  }
]
